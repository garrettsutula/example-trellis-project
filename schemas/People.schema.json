{
  "$id": "Person.schema.json",
  "title": "Person",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "name": {
          "type":"string"
        },
        "description": {
          "type": "string"
        },
        "location": {
          "type": "string",
          "enum": ["internal", "external"]
        }
      }
    }
  },
  "required": ["name"]
}