  "version": "0.2.0",
  "configurations": [
    {
      "name": "Trellis 'build' Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build"],
      "outFiles": [
        "${workspaceFolder}/node_modules/trellisuml/**/*.js"
      ]
    },
    {
      "name": "Trellis 'watch' Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "outFiles": [
        "${workspaceFolder}/node_modules/trellisuml/**/*.js"
      ]
    }        
  ]
}