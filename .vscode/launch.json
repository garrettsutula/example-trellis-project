  "version": "0.2.0",
  "configurations": [
    {
      "name": "Trellis 'build' Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "trellis",
      "runtimeArgs": ["build"],
      "outFiles": [
        "${userHome}/source/trellis-uml/dist/**/*.js"
      ]
    },
    {
      "name": "Trellis 'watch' Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "trellis",
      "runtimeArgs": ["watch"],
      "outFiles": [
        "${userHome}/source/trellis-uml/dist/**/*.js",
        "${userHome}/source/trellis-uml/node_modules/trellis-core/**/*.js"
      ]
    }        
  ]
}