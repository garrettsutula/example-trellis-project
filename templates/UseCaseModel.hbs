@startuml High-Level Use Case Model - {{name}}
title {{name}} Use Case Model - High Level
left to right direction

{{#each usecases}}
  usecase {{id}} as "**{{name}}**"
{{/each}}

{{#each users}}
  actor "{{actor.name}}" as {{actor.id}}
{{/each}}

{{#each usecases as |usecase|}}
  {{#each users as |user|}}
  {{user.actor.id}} --> {{usecase.id}}
  {{/each}}
{{/each}}

@enduml

@startuml Detail-Level Use Case Model - {{name}}
title {{name}} Use Case Model - Detail Level
left to right direction

{{#each usecases}}
  usecase {{id}} as "
    **{{name}}**
    
    --
    {{description}}"

{{/each}}

{{#each users}}
  actor "{{actor.name}}" as {{actor.id}}
{{/each}}

{{#each usecases as |usecase|}}
  {{#each users as |user|}}
    {{user.actor.id}} --> {{usecase.id}}
  {{/each}}
{{/each}}

@enduml

{{#each usecases as |usecase|}}
@startuml Usecase - {{name}}
  title {{name}}

  usecase {{id}} as "
    {{name}}

    --

    {{description}}

    --
    
    **User (System):**
    {{#each users}}- {{actor.name}} ({{#each uses}}{{name}}{{/each}}){{/each}}"

{{#each users as |user|}}
  actor "{{actor.name}}" as {{actor.id}}
  {{user.actor.id}} --> {{usecase.id}}
{{/each}}
@enduml

{{/each}}